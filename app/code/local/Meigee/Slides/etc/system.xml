<config>
	<tabs>
        <slides_options translate="label" module="meigee_slides">
            <label>Meigee / Header Slider</label>
            <sort_order>2</sort_order>
        </slides_options>
    </tabs>
    <sections>
        <headerslider translate="label" module="meigee_slides">
			<label>Coin Slider</label>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>slides_options</tab>
            <groups>
                <coin translate="label">
                    <label>Slider Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>7</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label comment">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>                            
                        </enabled>
                        <onlyhome translate="label">
                            <label>Show only on the homepage</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Choose "No" to show slider on every page</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </onlyhome>
                        <width translate="label">
                            <label>Slide Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </width>
                        <height translate="label">
                            <label>Slide Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </height>
                        <spw translate="label">
                            <label>Squares Per Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </spw>
                        <sph translate="label">
                            <label>Squares per height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </sph>
                        <delay translate="label">
                            <label>Delay between images</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>in ms</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </delay>
                        <sdelay translate="label">
                            <label>Delay beetwen squares</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>in ms</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </sdelay>
                        <opacity translate="label">
                            <label>Opacity</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Opacity of title and navigation</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </opacity>
                        <titlespeed translate="label">
                            <label>Title Speed</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Speed of title appereance in ms</comment>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </titlespeed>
                        <!-- <effect translate="label">
                            <label>Effect</label>
                            <frontend_type>Select</frontend_type>
                            <source_model>slides/config_coineffects</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </effect> -->
                        <navigation translate="label">
                            <label>Navigation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </navigation>
                        <hoverpause translate="label">
                            <label>Hover Pause</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </hoverpause>
                    </fields>
                </coin>
            </groups>
        </headerslider>
    </sections>
</config>